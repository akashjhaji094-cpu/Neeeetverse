# ============================================
# NEETVerse Environment Configuration
# ============================================

# Server
NODE_ENV=development
PORT=3000
HOST=localhost

# Frontend
REACT_APP_API_URL=http://localhost:3000

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this

# UPI Configuration
ADMIN_UPI_ID=akash@upi
RUPEE_TO_XP=10
MIN_TOPUP_RUPEE=10
MIN_WITHDRAW_XP=1000
WITHDRAW_PROCESS_HOURS=24

# XP Economy
REFERRAL_XP_VALUE=20
SIGNUP_BONUS_XP=50
DOUBT_COST_XP=6
DOUBT_REWARD_XP=5
PLATFORM_FEE_PERCENT=10
SELLER_LOCK_DAYS=7

# Admin Settings
MAX_DAILY_TOPUPS=10
AUTO_BAN_WARNINGS=3
PROFANITY_FILTER=enabled

# File Storage (Supabase Storage)
STORAGE_BUCKET=neetverse-uploads
MAX_FILE_SIZE=5242880

# Email (Optional - for notifications)
SENDGRID_API_KEY=optional
ADMIN_EMAIL=admin@neetverse.app

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=optional
SENTRY_DSN=optional

# Redis (Optional - for caching)
REDIS_URL=optional

# Razorpay (Future integration)
RAZORPAY_KEY_ID=future
RAZORPAY_KEY_SECRET=future
